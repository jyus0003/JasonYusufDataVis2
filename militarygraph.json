{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/jyus0003/JasonYusufDataVis2/main/global%20firepower%202022%20wide.csv"
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            "null",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal",
        "title": "Country"
      },
      "y": {
        "field": "AM",
        "type": "quantitative",
        "title": "Available Manpower",
        "scale": {"type": "log", "domain": [100000, 10000000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "AP",
            "type": "quantitative",
            "title": "Active Personel",
            "scale": {
              "type": "threshold",
              "domain": [0, 250000, 500000, 1000000, 1500000, 2000000],
              "range": [0, 2500, 5000, 7500, 10000, 12500]
            }
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "AP", "type": "quantitative", "format": ",", "title": "Active Personel"},
            {"field": "AM", "type": "quantitative", "format": ",", "title": "Active Manpower"},
            {"field": "TP", "type": "quantitative", "format": ",", "title": "Total Population"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        }
        }
    ]
}
