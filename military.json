{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Military Power of Different Countries Worldwide (2022)",
  "width": 900,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {"name": "zoom_level",
    "value": 200,
    "bind": {
      "input": "range",
      "min": 0,
      "max": 500,
      "step": 100,
      "name": "Zoom: "
    }
  },
  {
   "name": "centre_to",
   "value": [-24.2, 15],
   "bind": {
    "input": "select",
    "options": [
      [-100.6, 48],
      [-59.5, -16.4],
      [136.3, -26.3],
      [21.2, 7.2],
      [21.7, 48],
      [99, 30]
    ],
    "labels": ["North America", "South America", "Australia", "Africa", "Europe", "Asia"],
    "name": "Map Centre: "
   }
  }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "centre_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#A7C7E7"}
    },
    {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
      },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jyus0003/JasonYusufDataVis2/main/global%20firepower%202022%20wide.csv"
            },
            "key": "Country",
            "fields": ["AP", "TP", "DB", "AM"]
          }
        },
        {
          "calculate": "datum.DB/datum.TP",
          "as": "Defense Budget per head"
        },
        {
          "calculate": "(datum.AP/datum.TP)*100",
          "as": "% Active Personnel"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "AP",
          "title": "Total Active Personnel",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 500000, 1000000, 1500000, 2000000],
            "range": ["#50C878", "#08A04B", "#228B22", "#355E3B"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "AP", "type": "quantitative", "title": "Total Active Personnel"},
          {"field": "% Active Personnel", "type": "quantitative", "title": "% Active Personnel", "format": ".2f"},
          {"field": "TP", "type": "quantitative", "title": "Total Population"},
          {"field": "Defense Budget per head", "type": "quantitative", "format": ".2f", "title": "Defense Budget per head (USD)"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "text"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}